<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aaa_activity_dialog_crear_promocion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dannyang27.sportpoints.activities.Promocion.DialogCrearPromo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:text="Sport Points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:textSize="36sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:textStyle="normal|bold" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="175dp"
            app:srcCompat="@drawable/com_facebook_profile_picture_blank_portrait"
            android:layout_marginTop="12dp"
            android:id="@+id/imagen_dialog_promocion"
            android:layout_below="@+id/textView19"
            android:layout_alignParentStart="true" />

        <Button
            android:text="CANCELAR"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/cancelarBtn_dialog_promo"
            android:textColor="@color/colorAccent"
            style="?android:attr/borderlessButtonStyle"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView19" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            android:src="@drawable/ic_plus"
            android:id="@+id/fab_dialog_promocion"
            app:srcCompat="@drawable/ic_plus"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/textView19"
            android:layout_marginEnd="12dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/lugar_dialog_promocion"
            android:hint="Lugar"
            android:layout_below="@+id/nombre_dialog_promocion"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/nombre_dialog_promocion" />

        <Button
            android:text="SIGUIENTE"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/crearBtn_dialog_promo"
            android:textColor="@color/colorAccent"
            style="?android:attr/borderlessButtonStyle"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/cancelarBtn_dialog_promo" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nombre_dialog_promocion"
            android:hint="Promocion"
            android:layout_below="@+id/fab_dialog_promocion"
            android:layout_alignStart="@+id/cancelarBtn_dialog_promo" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/fecha_Init_promocion"
            android:hint="Fecha Inicio"
            android:layout_below="@+id/lugar_dialog_promocion"
            android:layout_alignStart="@+id/lugar_dialog_promocion"
            android:inputType="date" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/fecha_fin"
            android:hint="Fecha Fin"
            android:layout_below="@+id/fecha_Init_promocion"
            android:layout_alignEnd="@+id/crearBtn_dialog_promo" />
    </RelativeLayout>
</RelativeLayout>
