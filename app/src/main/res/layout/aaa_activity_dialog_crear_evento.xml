<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aaa_activity_dialog_crear_evento"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dannyang27.sportpoints.activities.Evento.DialogCrearEvento">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp">

        <TextView
            android:text="Sport Points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19"
            android:textSize="36sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:textStyle="normal|bold" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_below="@+id/imagen_dialog_evento"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:id="@+id/nombre_dialog_evento"
            android:hint="Evento" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/lugar_dialog_evento"
            android:layout_below="@+id/nombre_dialog_evento"
            android:layout_alignParentEnd="true"
            android:hint="Lugar" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/hora_dialog_evento"
            android:layout_below="@+id/lugar_dialog_evento"
            android:layout_alignParentEnd="true"
            android:hint="Hora"
            android:inputType="time" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/fecha_dialog_evento"
            android:layout_below="@+id/hora_dialog_evento"
            android:layout_alignParentEnd="true"
            android:hint="Fecha" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:id="@+id/imagen_dialog_evento"
            app:srcCompat="@drawable/com_facebook_profile_picture_blank_portrait"
            android:layout_below="@+id/textView19"
            android:layout_alignParentStart="true" />

        <Button
            android:text="CANCELAR"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/cancelarBtn_dialog_evento"
            android:textColor="@color/colorAccent"
            style="?android:attr/borderlessButtonStyle"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView19" />

        <Button
            android:text="SIGUIENTE"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/crearBtn_dialog_evento"
            android:textColor="@color/colorAccent"
            style="?android:attr/borderlessButtonStyle"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/cancelarBtn_dialog_evento" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@drawable/ic_plus"
            android:id="@+id/fab_dialog_evento"
            android:layout_marginEnd="19dp"
            android:layout_above="@+id/lugar_dialog_evento"
            android:layout_alignEnd="@+id/textView19"
            android:layout_marginBottom="33dp" />
    </RelativeLayout>
</RelativeLayout>
